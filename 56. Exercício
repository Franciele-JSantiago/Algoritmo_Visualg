algoritmo "Exercício 56"

//PROPOSTA:Crie um programa que leia vários números e mostre o somatório.
//o programa deve parar ao ler 1111
//Autora: Franciele Juchem Santiago
//Prof: Gustavo Guanabara
//Data: 06/04/2023

var
   Cont: Inteiro
   soma, Res, Num: Real


inicio
   Escreval("           CALCULADORA            ")
   Escreval("==================================")
   Escreval(" Digite 1111 para parar a operação")
   Escreval("==================================")
   TEMPO(100)
   cont<-1
   Soma<-0
   Repita
      Escreva("Digite o ", cont, "º número:")
      leia(Num)
      soma <- (soma + num )
      Res <- Soma-1111
      cont <- cont+1

   Até (Num = 1111)
   TEMPO(0)

   Escreval("A Soma de todos os números é: ", Res:5:2)

fimalgoritmo
