Escreval("       Vou sortear um número de 1 a 10     ")
Escreval("         Você terá 4 chances de acertar    ")
Escreval("           Quer tentar acertar?            ")
Escreval("===========================================")
PC <- randi(11)
se (PC = 0) entao
pc <- 1
Fimse
Contador <-1
Enquanto (contador <=4) faca
Escreva("Digite seu palpite:")
leia(Jogador)
Escreval("===========================================")
Timer(300)
Escreval("Sorteando....")
Escreval("           ......")
Escreval("               ......")
Escreval("                    ......")
Escreval("                          ......")
Timer(0)
Escreval("============================================")
Se (Jogador = PC) entao
Escreval ("Parabéns,você acertou! Eu escolhi o Nº ",Jogador)
contador <- 4
senao
Escreval("Errou.. Eu escolhi o Nº",PC)
