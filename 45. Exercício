var

   Start, Stop, Salto: Inteiro

inicio

   Escreval("===================================================")
   Escreval("          SISTEMA DE CONTAGEM AVANÇADA             ")
   Escreval("===================================================")

   Escreva("Digite o primeiro valor: ")
   leia (Start)
   Escreva("Digite o último valor: ")
   leia (Stop)
   Escreva("Digite o incremento: ")
   leia (Salto)

   Escreval("===================================================")
   Se (Salto = 0) entao
      EscrevaL("INCREMENTO INVÁLIDO")
   Escreval("===================================================")
   senao

      Se (Start < Stop) entao
         Escreva("Contagem: ")
         Enquanto (Start <=Stop) faca
            Escreva(Start)
            Start <- Start + Salto

         FimEnquanto
         EscrevaL(" Acabou!")
   Escreval("===================================================")

      senao

         Se (Start > Stop) entao
            Escreva("Contagem: ")
            Enquanto (Start >= Stop) faca
               Escreva(start )
               Start <- Start - Salto
            FimEnquanto
            EscrevaL(" Acabou!")
   Escreval("===================================================")
         fimse
      fimse
   fimse

